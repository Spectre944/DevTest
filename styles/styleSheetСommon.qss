/*/////////////////////////////////////////////////////////////////////////////////////////////////////////////*/
/*////////////////////////////////////////// QWidget //////////////////////////////////////////////////////////*/
/*/////////////////////////////////////////////////////////////////////////////////////////////////////////////*/
QWidget{	color: white;
			font-size: 12px;
	}
#centralwidget{	background-color: @secondColor;	}


/*/////////////////////////////////////////////////////////////////////////////////////////////////////////////*/
/*//////////////////////////////////////////StackedWidget//////////////////////////////////////////////////////*/
/*/////////////////////////////////////////////////////////////////////////////////////////////////////////////*/

#stackedWidget .QFrame{
	background-color: @mainColor;
    border-radius: 6px;
	border: 1px solid gray;
	color: #ffffff;
} 


/*/////////////////////////////////////////////////////////////////////////////////////////////////////////////*/
/*/////////////////////////////////////////////APP FRAME //////////////////////////////////////////////////////*/
/*/////////////////////////////////////////////////////////////////////////////////////////////////////////////*/

#appFrame .QPushButton, #topBarFrame .QPushButton {	
    background-color: qlineargradient(spread:reflect, x1:0, y1:1, x2:0, y2:0.33, stop:0 @ButtonColor, stop:0.933845 @ButtonFocus);
	color: #ffffff;
	text-align: center;
	border-radius: 5px;
	border: 1px solid black;
}

#appFrame .QPushButton:hover, #topBarFrame .QPushButton:hover{	
	background-color: QLinearGradient( x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 @ButtonGRHover, stop: 0.1 @ButtonGRHover, stop: 0.5 @ButtonGRHover, stop: 0.9 @ButtonHover, stop: 1 @ButtonHover);
}

#appFrame .QPushButton:pressed, #topBarFrame .QPushButton:pressed{	
	padding-left: 2px;
	padding-top: 5px;
	background-color: QLinearGradient( x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 @ButtonGRPressed, stop: 0.1 @ButtonGRPressed, stop: 0.5 @ButtonColor, stop: 0.9 #@ButtonGRPressed, stop: 1 #@ButtonGRPressed);

}

/*/////////////////////////////////////////////////////////////////////////////////////////////////////////////*/
/*////////////////////////////////////////// LEFT MENU ////////////////////////////////////////////////////////*/
/*/////////////////////////////////////////////////////////////////////////////////////////////////////////////*/

#leftMenuFrame{	background-color: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:0, stop:0 @mainColor , stop:1 @secondColor);	}	

#leftMenuFrame .QPushButton {	
    background-color: @ButtonColor;
	color: #ffffff;
	text-align: left;
	padding-left: 15px;  
	border-radius: 6px;
}

#leftMenuFrame .QPushButton:hover{	
	border-right: 25px solid transparent;
	background-color: @ButtonHover;
}

#leftMenuFrame .QPushButton:focus {
	border-right: 25px solid transparent;
	background-color: @ButtonHover;
}

#leftMenuFrame .QPushButton:checked {
	border-right: 25px solid transparent;
	background-color: @ButtonFocus;
}									 
/*Dont draw border in hide menu button*/
#leftMenuFrame .QPushButton#pushButton_menu:hover{
	border-right: 0px;
}


/*/////////////////////////////////////////////////////////////////////////////////////////////////////////////*/
/*//////////////////////////////////////////TOB BAR STYLE /////////////////////////////////////////////////////*/
/*/////////////////////////////////////////////////////////////////////////////////////////////////////////////*/

#topBarFrame{	background-color: qlineargradient(spread:reflect, x1:0.605, y1:0, x2:0.538, y2:1, stop:0 @mainColor, stop:1 @secondColor); }

/*/////////////////////////////////////////////////////////////////////////////////////////////////////////////*/
/*//////////////////////////////////////////////TabWidget//////////////////////////////////////////////////////*/
/*/////////////////////////////////////////////////////////////////////////////////////////////////////////////*/

QTabWidget::pane {
  
  border-top-left-radius: 0px;
  border-top-right-radius: 6px;
  border-bottom-right-radius: 6px;
  border-bottom-left-radius: 6px;

  border: 1px solid gray;
  top:-1px; 
  background-color: @TabPane;
  color: white;
} 

QTabBar::tab {	
  background-color: @TabColor;

  border-top-left-radius: 6px;
  border-top-right-radius: 6px;
  border-bottom-right-radius: 0px;
  border-bottom-left-radius: 0px;

  border: 1px solid gray; 
  padding: 10px;
} 

QTabBar::tab:selected { 
  background-color: @TabSelected;
  margin-bottom: -1px; 
}


/*/////////////////////////////////////////////////////////////////////////////////////////////////////////////*/
/*//////////////////////////////////////////QTableWidget //////////////////////////////////////////////////////*/
/*/////////////////////////////////////////////////////////////////////////////////////////////////////////////*/

QTableWidget {	
	background-color: transparent;
	padding: 0px;
	border-radius: 5px;
	gridline-color: @GridLineColor;
	border-bottom: 1px solid @GridLineColor;
}

QTableView::item:alternate { 
	background-color: @TableViewAlt;
}
QTableWidget::item{
	border-color: @GridLineColor;
	padding-left: 5px;
	padding-right: 5px;
	gridline-color: @GridLineColor;
}
QTableWidget::item:selected{
	background-color: @TableItemSelected;
}


QHeaderView::section{
	background-color: @HeaderViewSection ;
	max-width: 30px;
	border: 1px solid @HeaderViewSectionBorder;
	border-style: none;
    border-bottom: 1px solid @HeaderViewSectionBorder;
    border-right: 1px solid @HeaderViewSectionBorder;
}
QTableWidget::horizontalHeader {	
	background-color: @TableViewHeadBG;
}

QTableWidget::item::selected, QTableWidget QLineEdit { 
	background-color: @TableItemSelected; 
	color: white; 
	border: 0px;
}

QTableWidget QTableCornerButton::section {
    background-color: @TableItemSelected;
}


QHeaderView::section:horizontal
{
    border: 1px solid @HeaderViewSection ;
	background-color: @HeaderViewSection ;
	padding: 3px;
	border-top-left-radius: 7px;
    border-top-right-radius: 7px;
}
QHeaderView::section:vertical
{
    border: 1px solid @HeaderViewSectionBorder;
}


QScrollBar:horizontal {
    border: none;
    background: @ScrollBarBG;
    height: 15px;
    margin: 0px 21px 0 21px;
	border-radius: 0px;

}
QScrollBar::handle:horizontal {
    background: @ScrollBarHandle;
    min-width: 25px;
	border-radius: 4px
}
QScrollBar::add-line:horizontal {
    border: none;
    background: @ScrollBarBG;
    width: 20px;
	border-top-right-radius: 4px;
    border-bottom-right-radius: 4px;
    subcontrol-position: right;
    subcontrol-origin: margin;
}
QScrollBar::sub-line:horizontal {
    border: none;
    background: @ScrollBarBG;
    width: 20px;
	border-top-left-radius: 4px;
    border-bottom-left-radius: 4px;
    subcontrol-position: left;
    subcontrol-origin: margin;
}
QScrollBar::up-arrow:horizontal, QScrollBar::down-arrow:horizontal
{
     background: none;
}
QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal
{
    background: none;
}
QScrollBar:vertical {
	border: none;
	background-color: @ScrollBarBG;
	width: 15px;
	margin: 21px 0 21px 0;
	border-radius: 0px;
}
QScrollBar::handle:vertical {	
	background: @ScrollBarHandle;
	min-height: 25px;
	border-radius: 4px
}
QScrollBar::add-line:vertical {
	border: none;
	background: @ScrollBarBG;
	height: 20px;
	border-bottom-left-radius: 4px;
	border-bottom-right-radius: 4px;
	subcontrol-position: bottom;
	subcontrol-origin: margin;
}
QScrollBar::sub-line:vertical {
	border: none;
	background: @ScrollBarBG;
	height: 20px;
	border-top-left-radius: 4px;
	border-top-right-radius: 4px;
	subcontrol-position: top;
	subcontrol-origin: margin;
}
QScrollBar::up-arrow:vertical, QScrollBar::down-arrow:vertical {
	background: none;
}

QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
	background: none;
}

/*/////////////////////////////////////////////////////////////////////////////////////////////////////////////*/
/*////////////////////////////////////////PROGRESS BAR STYLE //////////////////////////////////////////////////*/
/*/////////////////////////////////////////////////////////////////////////////////////////////////////////////*/


QProgressBar {
	text-align: center;
	font-size: 12px;
	color: #ffffff;
	background-color: @ProgressBarBG;
    border: 1px solid black;
    border-radius: 4px;
}

QProgressBar::chunk {
    background-color: @ProgressBarChunk;
	border-radius: 4px;
	margin: 0.25px;
}

/*/////////////////////////////////////////////////////////////////////////////////////////////////////////////*/
/*//////////////////////////////////////////SPIN BOX //////////////////////////////////////////////////////////*/
/*/////////////////////////////////////////////////////////////////////////////////////////////////////////////*/


QComboBox QAbstractItemView {
    border: 2px solid darkgray;
    selection-background-color: @SpinBoxSection ;
 	background-color: @SpinBoxBG;
}							 
QTextEdit, QLineEdit, QListView, QComboBox, QSpinBox, QDoubleSpinBox{	
	background-color: @secondColor;
	border-radius: 4px;

}

QTextEdit:focus, QLineEdit:focus, QListView:focus, QComboBox:focus, QSpinBox:focus, QDoubleSpinBox:focus{	
	background-color: @secondColor;
	border-radius: 4px;
	border: 2px solid lightgray;
}

QTextBrowser, QScrollArea {	
	background-color: @mainColor;
	border-radius: 4px;
	border: 1px solid lightgray;
}

/*/////////////////////////////////////////////////////////////////////////////////////////////////////////////*/
/*/////////////////////////////////////////////ScrollArea//////////////////////////////////////////////////////*/
/*/////////////////////////////////////////////////////////////////////////////////////////////////////////////*/

QAbstractScrollArea #scrollAreaWidgetContents {
	background-color: transparent;
	border: 0px;

}

QAbstractScrollArea #scrollAreaWidgetContents_2 {
	background-color: transparent;
	border: 0px;
}

QAbstractScrollArea #scrollAreaWidgetContents_3 {
	background-color: transparent;
	border: 0px;
}

QMenu {
    background-color: @MenuBackground;
    border-top: none;
    border-left:none;
    border-right:none;
    border-bottom:4px solid @MenuBorder;
    color:#fff;;
}

QMenu::item {
    spacing: 3px; /* spacing between menu bar items */
    padding: 10px 85px 10px 20px;
    background: transparent;
}

QMenu::item:selected {
    background-color: @MenuSelected;
    border-top: none;
    border-left:none;
    border-bottom:none;
    border-left:3px solid  @MenuBorder;
}